{
    "manifest_version": 2,
    "name": "MangaLib Downloader",
    "version": "0.2",
    "description": "Скачивает мангу с MangaLib в формате FB2",

    "permissions": [
        "activeTab",
        "tabs",
        "downloads",
        "https://api.cdnlibs.org/*",
        "https://cover.imglib.info/*",
        "https://ranobelib.me/*",
        "https://*.ranobelib.me/*",
        "https://*.mangalib.me/*",
        "<all_urls>"
    ],

    "browser_action": {
        "default_title": "Скачать книгу",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": ["*://*.remanga.org/*", "*://*.mangalib.me/*"],
        "js": ["content.js"],
        "run_at": "document_start"
    }]
}